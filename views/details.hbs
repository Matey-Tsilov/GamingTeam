<main id="details">
  <section id="details-info">
    <div class="game-image">
      <img src={{image}} />
    </div>

    <div class="game-info">
      <div class="game-text">
        <h1 id="name">{{name}}</h1>
        <h3 id="platform">Platform: {{platform}} </h3>
        <p id="price"><span>Price: {{price}} </span></p>
        <p id="genre"><span>Genre: {{genre}} </span></p>
        <p id="description">
          {{description}}
        </p>
      </div>
      <div class="product-btn">
        {{#if isOwner}}
          <div class="author">
            <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
            <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
          </div>
        {{/if}}

        {{#if hasBought}}
          <p class="buy-message">You have already bought this game</p>
          {{else if isGuest}}
        <p class="buy-message">You are not allowed to buy!</p>
        {{else if isOwner}}
        <p class="buy-message">You are not allowed to buy!</p>
        {{else}}
          <a href="/buy/{{_id}}" class="btn-buy">Buy</a>
        {{/if}}
      </div>
    </div>
  </section>
</main>